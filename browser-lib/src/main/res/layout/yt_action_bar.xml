<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_action_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_action_back"
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="@dimen/action_bar_height"
        android:padding="12dp"
        android:src="@drawable/yt_ic_back" />

    <TextView
        android:id="@+id/tv_titile"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        style="@style/Toolbar.TitleText"/>

    <ImageView
        android:id="@+id/iv_action_full_screen"
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="@dimen/action_bar_height"
        android:scaleType="fitXY"
        android:padding="12dp"
        android:src="@drawable/yt_ic_menu_fullscreen"/>

    <ImageView
        android:id="@+id/iv_action_share"
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="@dimen/action_bar_height"
        android:scaleType="fitXY"
        android:padding="16dp"
        android:src="@drawable/yt_ic_menu_share"/>
</LinearLayout>